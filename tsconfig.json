{
  "compilerOptions": {
    "rootDir": "./src", // new
    "outDir": "./dist", // new
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"], // new
    "module": "es2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2016",
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}
